<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">

    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                
                <!-- Root ACL for Employee module -->
                <resource id="Vendor_Employee::employee_root"
                          title="Employee Management"
                          sortOrder="10">

                    <!-- Employee list -->
                    <resource id="Vendor_Employee::employee_list"
                              title="View Employees"
                              sortOrder="10"/>

                    <!-- Add/Edit Employee -->
                    <resource id="Vendor_Employee::employee_new"
                              title="Add / Edit Employee"
                              sortOrder="20"/>

                    <!-- Static Page -->
                    <resource id="Vendor_Employee::static_page"
                              title="About Module"
                              sortOrder="30"/>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
