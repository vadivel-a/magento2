<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">

    <!-- GET Employee List -->
    <route url="/V1/employee/list" method="GET">
        <service class="Vendor\Employee\Api\EmployeeRepositoryInterface" method="getList"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

    <!-- POST Add Employee -->
    <route url="/V1/employee/add" method="POST">
        <service class="Vendor\Employee\Api\EmployeeRepositoryInterface" method="add"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
        <data>
            <parameter name="name" force="true">%name%</parameter>
            <parameter name="position" force="true">%position%</parameter>
        </data>
    </route>
</routes>
