
<form action="<?= $block->getFormAction() ?>" method="post">
    <!-- Hidden field to store employee ID -->
    <input type="hidden" name="employee_id" value="<?= $block->getEmployee()->getId() ?>" />

    <p>
        <label><?= __('First name') ?></label><br/>
        <input type="text" name="first_name" required 
               value="<?= $block->escapeHtml($block->getEmployee()->getFirstName()) ?>" />
    </p>

    <p>
        <label><?= __('Last name') ?></label><br/>
        <input type="text" name="last_name" 
               value="<?= $block->escapeHtml($block->getEmployee()->getLastName()) ?>" />
    </p>

    <p>
        <label><?= __('Email') ?></label><br/>
        <input type="email" name="email" required 
               value="<?= $block->escapeHtml($block->getEmployee()->getEmail()) ?>" />
    </p>

    <p>
        <label><?= __('Position') ?></label><br/>
        <input type="text" name="position" 
               value="<?= $block->escapeHtml($block->getEmployee()->getPosition()) ?>" />
    </p>

    <p>
        <label><?= __('Department') ?></label><br/>

        <?php $departments = $block->getDepartmentOptions(); ?>
        <?php if (!empty($departments) && is_array($departments)): ?>
            <select name="department" class="admin__control-select">
                <?php foreach ($departments as $value => $label): ?>
                    <option value="<?= $block->escapeHtml($value) ?>"
                        <?= ($block->getEmployee()->getDepartment() == $value) ? 'selected' : '' ?>>
                        <?= $block->escapeHtml($label) ?>
                    </option>
                <?php endforeach; ?>
            </select>
        <?php endif; ?>
    </p>

    <p>
        <button type="submit"><?= __('Save') ?></button>
    </p>
    <p><a href="<?= $block->getUrl('employee') ?>">‚Üê Back to Employee List</a></p>
</form>
