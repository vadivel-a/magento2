<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">

    <table name="vendor_feedback" resource="default" engine="innodb" comment="Feedback">
        <column xsi:type="int" name="feedback_id" unsigned="true" nullable="false" identity="true" comment="Feedback ID"/>
        <column xsi:type="varchar" name="customer_name" nullable="false" length="255" comment="Customer Name"/>
        <column xsi:type="varchar" name="customer_email" nullable="false" length="255" comment="Customer Email"/>
        <column xsi:type="text" name="message" nullable="false" comment="Message"/>
        <column xsi:type="timestamp" name="created_at" nullable="false" default="CURRENT_TIMESTAMP" on_update="false" comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" nullable="false" default="CURRENT_TIMESTAMP" on_update="true" comment="Updated At"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="feedback_id"/>
        </constraint>
        <index referenceId="VENDOR_FEEDBACK_EMAIL_IDX" indexType="btree">
            <column name="customer_email"/>
        </index>
    </table>
</schema>
