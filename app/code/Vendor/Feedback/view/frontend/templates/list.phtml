<?php /** @var \Vendor\Feedback\Block\FeedbackList $block */ ?>
<h1>Customer Feedback</h1>
<p>
    <a href="<?= $block->getUrl('feedback/add') ?>">Add Feedback</a>
</p>
<?php $items = $block->getFeedbackCollection(); ?>

<?php if ($items->getSize()): ?>
    <ul>
        <?php foreach ($items as $item): ?>
            <li>
                <b><?= $block->escapeHtml($item->getCustomerName()) ?></b> 
                <?= $block->escapeHtml($item->getCustomerEmail()) ?><br/>
                <?= $block->escapeHtml($item->getMessage()) ?><br/>
                <a href="<?= $block->getUrl('feedback/edit/' . $item->getId()) ?>">Edit</a> | 
                <a href="<?= $block->getUrl('feedback/delete/' . $item->getId()) ?>">Delete</a>
            </li>
        <?php endforeach; ?>
    </ul>
<?php else: ?>
    <p>No feedback yet.</p>
<?php endif; ?>
